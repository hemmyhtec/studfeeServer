doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Admin Form
    link(rel='shortcut icon', href='/logo-icon.ico', type='image/x-icon')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx', crossorigin='anonymous')
  body
    img.rounded.mx-auto.d-block(src='/logo.png', alt='StudFee-Logo', width='150px', height='150px')
    .container.my-5
      .row.justify-content-center
        .col-lg-6.col-md-8
          .card.shadow-lg.border-0.rounded-lg.mt-5
            .card-header
              h3.text-center.font-weight-light.my-4 Register
            .card-body
              form(method='POST' action="/admin/register-admin")
                .form-group
                  label(for='name') Full Name
                  input#name.form-control(name='name', type='text', required)
                .form-group
                  label(for='email') Email
                  input#email.form-control(name='email', type='email', required)
                .form-group
                  label(for='password') Password
                  input#password.form-control(name='password', type='password', required)
                .form-group
                  label(for='confirmPassword') Confirm Password
                  input#confirmPassword.form-control(name='confirmPassword', type='password', required)
                button.btn.btn-primary.btn-block(type='submit') Register
                p.text-center Already have an account?
                a(href='/login') Login here
            if (msg)
              .alert.alert-danger(role='alert')= msg

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js', integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa', crossorigin='anonymous')
