doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Sign-In Form
    link(rel='shortcut icon', href='/logo-icon.ico', type='image/x-icon')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx', crossorigin='anonymous')
  body
    img.rounded.mx-auto.d-block(src='/logo.png', alt='StudFee-Logo', width='150px', height='150px')
    .container.my-5
      .row.justify-content-center
        .col-lg-6.col-md-8
          .card.shadow.border-0.rounded-lg.mt-5
            .card-header
              h3.text-center.font-weight-light.my-4 Sign-In
            .card-body
              form(method='POST' action="/signin")
                .mb-3
                  label(for='email') Email
                  input#email.form-control(name='email', type='email', required)
                .mb-3
                  label(for='password') Password
                  input#password.form-control(name='password', type='password', required)
                .mb-3
                button.btn.btn-primary.btn-block(type='submit') Login
                p.text-center Don't have an account?
                a(href='register-admin') Register here
              if errors
                ul
                  each error in errors
                    li= error.msg

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js', integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa', crossorigin='anonymous')
